@using ToDoOdt;

@model ToDoOdt.Core.Restaurant

<div class="container">
    <div class="card">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <span>Location : @Model.Location</span>
            <span>Cuisine : @Model.Cuisine</span>
        </div>
        <div class="card-footer">
            <a asp-page="./Detail" asp-route-restaurantId="@Model.Id">Details</a>
            <a asp-page="./Edit" asp-route-restaurantId="@Model.Id">Edit</a>
            <a asp-page="./Delete" asp-route-restaurantId="@Model.Id">Delete</a>
        </div>
    </div>
</div>