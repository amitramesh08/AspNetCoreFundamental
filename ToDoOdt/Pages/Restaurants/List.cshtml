@page
@using ToDoOdt.Pages.Shared
@model ToDoOdt.Pages.Restaurants.List
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <title>Restaurants</title>
</head>
<body>
<div class="container">
    
    <form method="get">
        <div class="from-group">
            <div class="input-group">
                <input asp-for="RestaurantName" class="form-control" type="search" value="">
                <button type="submit" class="btn btn-primary btn-sm">
                     Search
                 </button>
            </div>
        </div>
    </form>
    <div class="card">
        <div class="card-header bg-primary">
            Restaurants
        </div>
        <div class="card-body">
            <table class="table">
                    @foreach (var item in  Model.Restarants)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Location</td>
                            <td>@item.Cuisine.ToString()</td>
                            <td><a asp-page="./Detail" 
                                   asp-route-restaurantId="@item.Id">Details</a></td>
                            <td><a asp-page="./Edit" asp-route-restaurantId="@item.Id">Edit</a></td>
                            <td><a asp-page="./Delete" asp-route-restaurantId="@item.Id">Delete</a></td>
                        </tr>
                    }
                </table>
                <a asp-page="./Edit" class="btn btn-primary">Add</a>
        </div>
    </div>
    
</div>
</body>
</html>
